@{
    ViewData["Title"] = "Home Page";
}
@*header*@
<div class="container space">
    <div class="row">
        <div class="col-lg-6 space">
            <img src="~/images/medical_care_movn.svg" class="img-fluid" alt="My image" />
        </div>
        <div class="col-lg-6 space">
            <h4 class="">User Search Section</h4>
            <p class="header-subtitle">Appointment and vaccination management is not easy.This application helps you to manage your local vaccine team and venues and gives you a dynamic solution.</p>
            <p class="header-title-text">To use this software as a user please press the search button to search your nearest venue.Then apply for your vaccine</p>
            <div class="learn-more-btn-section">
                <a type="button" class="nav-link learn-more-btn btn-invert" asp-controller="Home" asp-action="VenueSearch">Search Now</a>
            </div>
        </div>

    </div>
    @*strategy*@
    <div class="container strategy-container space">
        <div class="col-lg-3 col-md-6 col-xs-8 offset-xs-2 strategy-card-section">
            <div class="strategy-card">
                <div class="strategy-card-icon-section">
                    <img src="~/images/strategy-1.png">
                </div>
                <h2>Deployment</h2>
                <p>This app is easy to deploy for small teams and events</p>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 col-xs-8 offset-xs-2 strategy-card-section">
            <div class="strategy-card">
                <div class="strategy-card-icon-section">
                    <img src="~/images/strategy-2.png">
                </div>
                <h2>Administration</h2>
                <p>Very simple admin panel for Admin and User</p>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 col-xs-8 offset-xs-2 strategy-card-section">
            <div class="strategy-card">
                <div class="strategy-card-icon-section">
                    <img src="~/images/strategy-3.png">
                </div>
                <h2>Searching</h2>
                <p>Search over database and shorting data with query</p>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 col-xs-8 offset-xs-2 strategy-card-section">
            <div class="strategy-card">
                <div class="strategy-card-icon-section">
                    <img src="~/images/strategy-4.png">
                </div>
                <h2>Security</h2>
                <p>Admin and user authentication and authorization</p>
            </div>
        </div>
    </div>


    <div class="services-section">
        <div class="services-section-bg-graphics">
            <img src="assets/images/services-section-bg.png">
        </div>
        <div class="container services-container">
            <div class="col-lg-5 services-title-section">
                <p class="services-subtitle">Usage of This Application</p>
                <h2 class="services-title">Manage Appoinment and Team</h2>
                <p class="services-text">This is a good application to manage appoinment of your vaccine event and others</p>
                <div class="services-accordion">
                    <button class="accordion">
                        Team Management
                    </button>
                    <div class="panel">
                        <p>
                            Some information on your web design and development services can go here. A few lines should do the trick.
                        </p>
                    </div>
                    <button class="accordion">
                        Appoint Management
                    </button>
                    <div class="panel">
                        <p>
                            More information on your application development services can go here, too. There's plenty of space available for you.
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 offset-lg-1 services-header-img-section">
                <img src="~/images/services-header.png">
            </div>
        </div>
    </div>

    <div class="services-sales-section">
        <div class="container services-container">
            <div class="col-lg-6 services-header-img-section padding-0">
                <img src="~/images/services-sales-header.png">
            </div>
            <div class="col-lg-5 offset-lg-1 services-title-section">
                <p class="services-subtitle">Future Planning</p>
                <h2 class="services-title">Dynamic Application</h2>
                <p class="services-text">I have a plan to make this app more functional with  inventory management system for vaccine and user managemnet system for admin </p>
                <div class="learn-more-btn-section">
                    <a class="nav-link learn-more-btn btn-invert" href="#pricing">View Pricing</a>
                </div>
            </div>
        </div>
    </div>
    <div class="contact-section">
        <div class="container contact-container">
            <div class="col-md-6 contact-title-section">
                <p class="contact-subtitle">Contact</p>
                <h2 class="contact-title">Questions?<br>Get in touch</h2>
                <p class="contact-text">We'll be happy to help answer any of your questions. Send us an email and we'll get back to you shortly.</p>
                <div class="learn-more-btn-section">
                    <a class="nav-link learn-more-btn btn-invert" asp-controller="Home" asp-action="Contact">Send an Email</a>
                </div>
            </div>
            <div class="col-md-6 contact-header-img">
                <img src="~/images/contact-header-img.png">
            </div>
        </div>
    </div>
</div>



